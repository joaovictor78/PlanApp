<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.planapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.PlanApp">
        <activity android:name=".view.ResetPasswordActivity"></activity>
        <activity android:name=".view.MainActivity" />
        <activity android:name=".view.MainHomeActivity" />
        <activity android:name=".view.RegisterActivity" />
        <activity android:name=".view.LoginActivity" />
        <activity android:name=".view.ScheduleActivity" />
        <activity android:name=".view.AddAppointmentActivity" />
        <activity android:name=".view.MemberPrinceActivity" />
        <activity android:name=".view.TotalQuotationActivity" />
        <activity android:name=".view.ScheduledAppoimentsActivity" />
        <activity
            android:name=".view.SplashScreenActivity"
            android:label="Plan App"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>